// parameters --
// number of tokens: 4096
// number of agents: 16
// number of consumptions: 256

agents(16).
tokens(4096).
token_value(256).

!init.

+!init : agents(W) && tokens(T) && token_value(V) =>
    #print("start at: ");
    #println(#System.currentTimeMillis());
    +not_done(T);
    for(I in between(1, T, I)) {
          J = #std.math.ceil(I * ( W / T ));
          #achieve("thread"+J,token(V));
        }
   .

@atomic
+!done : not_done(T) =>
    if (T == 1) {
        #print("done at: ");
        #println(#System.currentTimeMillis());
        #std.coms.exit();
    };
    -not_done(T);
    +not_done(T - 1)
.

