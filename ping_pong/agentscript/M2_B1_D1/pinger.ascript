// parameters --
// number of pingers: 2
// number of balls: 1
// delay: 1

ended(0).
terminated(0).
t_total(1).
m_total(2).

!init.

+!init : t_total(T) =>    
    N = "ponger1";
    for(I in between(1,T,I)) {
          W = #math.random() * 1;
          #achieve(N, pong(W));
        }
   .

@atomic
+!finished : ended(I) && t_total(T) =>
    if (T == I + 1) {
        #achieve("pinger1", terminate);
    };
    -ended(I);
    +ended(I + 1);
    #println(I + 1).

@atomic
+!terminate : terminated(I) && m_total(M) =>
    if (M == I + 1) {
        #println("done at:");
        #println(#System.currentTimeMillis());
        #std.coms.exit();
    };
    -terminated(I);
    +terminated(I+1).
